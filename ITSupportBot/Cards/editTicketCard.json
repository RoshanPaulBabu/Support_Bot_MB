{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Input.Text",
            "id": "title",
            "placeholder": "Enter the ticket title",
            "value": "${title}",
            "spacing": "padding"
        },
        {
            "type": "Input.Text",
            "id": "description",
            "placeholder": "Enter the ticket description",
            "value": "${description}",
            "isMultiline": true,
            "spacing": "Padding"
        },
        {
            "type": "Input.Text",
            "id": "ticketId",
            "value": "${ticketId}",
            "isVisible": false
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Save"
        }
    ]
}