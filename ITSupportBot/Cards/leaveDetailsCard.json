{
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "Image",
            "url": "https://i.postimg.cc/7YV5Yr6Z/Botangelos-black.png"
        },
        {
            "type": "TextBlock",
            "text": "Leave Status",
            "weight": "Bolder",
            "size": "ExtraLarge",
            "horizontalAlignment": "Center",
            "spacing": "Small",
            "color": "Accent",
            "fontType": "Default"
        },
        {
            "type": "FactSet",
            "facts": [
                {
                    "title": "Created At:",
                    "value": "${CreatedAt}"
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Status:",
                            "weight": "Bolder",
                            "wrap": true,
                            "spacing": "Medium"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${StatusDisplay}",
                            "wrap": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Leave Type:",
                            "weight": "Bolder",
                            "wrap": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${LeaveType}",
                            "wrap": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.ToggleVisibility",
                    "title": "Expand Details",
                    "targetElements": [
                        "expandedDetails"
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "id": "expandedDetails",
            "isVisible": false,
            "items": [
                {
                    "type": "FactSet",
                    "facts": [
                        {
                            "title": "Start & End Date:",
                            "value": "${StartDate} to ${EndDate}"
                        },
                        {
                            "title": "Reason:",
                            "value": "${Reason}"
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}